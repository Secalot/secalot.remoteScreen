<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RemoteScreen"             
             x:Class="RemoteScreen.RemoteScreenPage"
             xmlns:htmlLabel="clr-namespace:Plugin.HtmlLabel;assembly=Plugin.HtmlLabel"
             Title="Secalot RemoteScreen"
             NavigationPage.HasBackButton="False">

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Unbind" Order="Primary" Text="Unbind" Priority="0" Activated="OnUnbindMenuItemClicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Padding="10, 10, 10, 50">
            <StackLayout Orientation="Horizontal"  HorizontalOptions="Center">
                <StackLayout Orientation="Vertical"  HorizontalOptions="Start">
                    <Image Source="greenCircle.png" HeightRequest="25" />
                </StackLayout>
                <StackLayout Orientation="Vertical"  HorizontalOptions="Start">
                    <Label Text="Control Panel found" VerticalTextAlignment="Center" HeightRequest="25"/>
                </StackLayout>
            </StackLayout>
            <htmlLabel:HtmlLabel Text="{Binding PageText}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Get Transaction Details" Clicked="OnGetTransactionButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>